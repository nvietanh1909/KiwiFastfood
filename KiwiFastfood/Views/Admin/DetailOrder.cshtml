@model dynamic

@{
    ViewBag.Title = "DetailOrder";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Chi Tiết Đơn Hàng</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Mã khách hàng:</label>
                                <p class="form-control-static">@ViewBag.Order.maKH</p>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Ngày đặt:</label>
                                <p class="form-control-static">@ViewBag.Order.ngayDat</p>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Ngày giao:</label>
                                <p class="form-control-static">@ViewBag.Order.ngayGiao</p>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Tổng tiền:</label>
                                <p class="form-control-static">@ViewBag.Order.totalPrice</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Địa chỉ giao hàng:</label>
                                <p class="form-control-static">@ViewBag.Order.shippingAddress</p>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Số điện thoại:</label>
                                <p class="form-control-static">@ViewBag.Order.phoneNumber</p>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Trạng thái:</label>
                                <p class="form-control-static">@ViewBag.Order.status</p>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Phương thức thanh toán:</label>
                                <p class="form-control-static">@ViewBag.Order.paymentMethod</p>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Trạng thái thanh toán:</label>
                                <p class="form-control-static">@ViewBag.Order.paymentStatus</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group">
                        <a href="@Url.Action("EditOrder", "Admin", new { id = ViewBag.Id })" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a href="@Url.Action("Order", "Admin")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group img {
            width: 200px;
        }

    .font-weight-bold {
        color: #495057;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control-static {
        padding: 0.5rem;
        background: #f8f9fa;
        border-radius: 5px;
        margin-bottom: 0;
    }

    .badge {
        padding: 8px 12px;
        font-size: 0.9rem;
    }

    .btn-group {
        gap: 10px;
    }

    .btn {
        padding: 8px 20px;
    }

        .btn i {
            margin-right: 5px;
        }
</style>

