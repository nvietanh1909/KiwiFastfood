@{
    ViewBag.Title = "Hỗ trợ trực tuyến";
}

<div class="chat-container">
    <div class="chat-header">
        <div class="chat-title">
            <h2>Kiwi</h2>
        </div>
    </div>
    <div id="chatbox">
        <div id="messages">
            <div class="message bot-message welcome-message">
                <b>Kiwi:</b> Xin chào! Tôi là trợ lý ảo của Kiwi Fastfood. Tôi có thể giúp gì cho bạn hôm nay? Bạn có thể hỏi về thực đơn, giá cả, hoặc cách đặt hàng.
            </div>
        </div>
    </div>
    <div class="chat-input">
        <input type="text" id="messageInput" placeholder="Nhập tin nhắn của bạn..." />
        <button onclick="sendMessage()" class="send-btn">
            <i class="fas fa-paper-plane"></i>
        </button>
        <button onclick="clearChat()" class="clear-btn" title="Xóa lịch sử chat">
            <i class="fas fa-trash-alt"></i>
        </button>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    .chat-container {
        width: 400px;
        margin: 30px auto;
        background: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid #e0e0e0;
    }

    .chat-header {
        background: #4CAF50;
        color: white;
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .chat-title {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .chat-logo {
        width: 30px;
        height: 30px;
        object-fit: contain;
    }

    .chat-title h2 {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
    }

    #chatbox {
        height: 380px;
        overflow-y: auto;
        padding: 15px;
        background: #f8f9fa;
    }

    .chat-input {
        display: flex;
        align-items: center;
        padding: 12px;
        background: #fff;
        border-top: 1px solid #eaeaea;
    }

    .chat-input input {
        flex: 1;
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 20px;
        font-size: 14px;
        outline: none;
        transition: border-color 0.3s;
    }

    .chat-input input:focus {
        border-color: #4CAF50;
    }

    .chat-input button {
        background: #4CAF50;
        color: white;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-left: 8px;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: background 0.3s;
    }

    .chat-input button:hover {
        background: #3d8b40;
    }

    .chat-input button.clear-btn {
        background: #f44336;
    }

    .chat-input button.clear-btn:hover {
        background: #d32f2f;
    }

    .message {
        padding: 10px 15px;
        border-radius: 20px;
        margin-bottom: 15px;
        max-width: 80%;
        position: relative;
        animation: fadeIn 0.3s ease;
        box-shadow: 0 1px 2px rgba(0,0,0,0.1);
        line-height: 1.5;
    }


    .user-message {
        background: #E3F2FD;
        color: #333;
        margin-left: auto;
        border-bottom-right-radius: 5px;
    }

    .bot-message {
        background: #FFFFFF;
        color: #333;
        border-bottom-left-radius: 5px;
    }

    .welcome-message {
        background: #E8F5E9;
        border: 1px solid #C8E6C9;
    }

    #messages {
        display: flex;
        flex-direction: column;
    }
</style>

<script>
    $(document).ready(function () {
        loadChatHistory();
        
        // Allow Enter key to send message
        $("#messageInput").keypress(function(e) {
            if(e.which == 13) {
                sendMessage();
                return false;
            }
        });
    });

    function sendMessage() {
        var message = $("#messageInput").val().trim();
        if (!message) {
            return;
        }

        // Disable input while processing
        $("#messageInput").prop('disabled', true);
        $(".send-btn").prop('disabled', true);

        $("#messages").append('<div class="message user-message"><b>Bạn:</b> ' + escapeHtml(message) + '</div>');
        $("#messageInput").val("");
        scrollToBottom();

        // Show typing indicator
        $("#messages").append('<div id="typing-indicator" class="message bot-message typing-indicator"><i>Đang nhập...</i></div>');
        scrollToBottom();

        $.post("/Chatbot/SendMessage", { message: message }, function (response) {
            // Remove typing indicator
            $("#typing-indicator").remove();
            
            if (response.success) {
                $("#messages").append('<div class="message bot-message"><b>Kiwi:</b> ' + escapeHtml(response.data) + '</div>');
                scrollToBottom();
            } else {
                $("#messages").append('<div class="message bot-message error-message"><b>Kiwi:</b> Xin lỗi, có lỗi xảy ra. Vui lòng thử lại sau.</div>');
                scrollToBottom();
            }
            
            // Re-enable input
            $("#messageInput").prop('disabled', false);
            $(".send-btn").prop('disabled', false);
            $("#messageInput").focus();
        }).fail(function() {
            $("#typing-indicator").remove();
            $("#messages").append('<div class="message bot-message error-message"><b>Kiwi:</b> Xin lỗi, có lỗi kết nối. Vui lòng thử lại sau.</div>');
            
            // Re-enable input
            $("#messageInput").prop('disabled', false);
            $(".send-btn").prop('disabled', false);
            $("#messageInput").focus();
        });
    }

    function loadChatHistory() {
        $.get("/Chatbot/GetChatHistory", function (response) {
            if (response.success && response.data) {
                $("#messages").html(response.data);
            } else {
                // Show welcome message if no history
                $("#messages").html('<div class="message bot-message welcome-message"><b>Kiwi:</b> Xin chào! Tôi là trợ lý ảo của Kiwi Fastfood. Tôi có thể giúp gì cho bạn hôm nay? Bạn có thể hỏi về thực đơn, giá cả, hoặc cách đặt hàng.</div>');
            }
            scrollToBottom();
        });
    }

    function clearChat() {
        if (confirm("Bạn có chắc muốn xóa toàn bộ lịch sử chat?")) {
            $.post("/Chatbot/ClearChatHistory", function (response) {
                if (response.success) {
                    loadChatHistory();
                }
            });
        }
    }

    function scrollToBottom() {
        $("#chatbox").animate({ scrollTop: $("#chatbox")[0].scrollHeight }, 300);
    }
    
    function escapeHtml(text) {
        var map = {
            '&': '&amp;',
            '<': '&lt;',
            '>': '&gt;',
            '"': '&quot;',
            "'": '&#039;'
        };
        return text.replace(/[&<>"']/g, function(m) { return map[m]; });
    }
</script>
