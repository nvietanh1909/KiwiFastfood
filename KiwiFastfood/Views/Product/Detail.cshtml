@model dynamic
@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (ViewBag.Product != null)
    {
        <div class="row">
            <!-- Hình ảnh sản phẩm -->
            <div class="col-md-6">
                <div class="card">
                    <img src="@ViewBag.Product.hinhAnh" class="card-img-top" alt="@ViewBag.Product.tenMon">
                </div>
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">@ViewBag.Product.tenMon</h2>
                        <p class="text-danger h3">@String.Format("{0:N0} VNĐ", ViewBag.Product.giaBan)</p>
                        <p class="card-text">@ViewBag.Product.noiDung</p>
                        <p class="card-text">
                            <strong>Số lượng còn lại:</strong> @ViewBag.Product.soLuongTon
                        </p>
                        @if (ViewBag.Product.soLuongTon > 0)
                        {
                            <form action="@Url.Action("Add", "Cart")" method="post" class="mt-3">
                                <input type="hidden" name="productId" value="@ViewBag.Product.id" />
                                <div class="form-group">
                                    <label for="quantity">Số lượng:</label>
                                    <input type="number" name="quantity" id="quantity" value="1" min="1" max="@ViewBag.Product.soLuongTon" class="form-control" style="width: 100px;" />
                                </div>
                                <button type="submit" class="btn btn-success mt-3">
                                    <i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-warning mt-3">
                                Sản phẩm đã hết hàng
                            </div>
                        }
                    </div>
                </div>

                <!-- Phần đánh giá -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Đánh giá sản phẩm</h5>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Product.ratings != null && ViewBag.Product.ratings.Count > 0)
                        {
                            foreach (var rating in ViewBag.Product.ratings)
                            {
                                <div class="border-bottom pb-3 mb-3">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <strong>@rating.user.tenNguoiDung</strong>
                                            <div class="text-warning">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= rating.rating)
                                                    {
                                                        <i class="fas fa-star"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star"></i>
                                                    }
                                                }
                                            </div>
                                        </div>
                                        <small class="text-muted">@rating.createdAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    <p class="mt-2">@rating.comment</p>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Chưa có đánh giá nào</p>
                        }

                        @if (ViewBag.Product.soLuongTon > 0)
                        {
                            <form action="@Url.Action("AddRating", "Product")" method="post" class="mt-3">
                                <input type="hidden" name="productId" value="@ViewBag.Product.id" />
                                <div class="form-group">
                                    <label>Đánh giá của bạn:</label>
                                    <div class="rating">
                                        @for (int i = 5; i >= 1; i--)
                                        {
                                            <input type="radio" name="rating" value="@i" id="star@i" required>
                                            <label for="star@i"><i class="fas fa-star"></i></label>
                                        }
                                    </div>
                                </div>
                                <div class="form-group mt-3">
                                    <label for="comment">Nhận xét:</label>
                                    <textarea name="comment" id="comment" class="form-control" rows="3" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary mt-3">Gửi đánh giá</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            Không tìm thấy thông tin sản phẩm
        </div>
    }
</div>

<style>
    .rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }

    .rating input {
        display: none;
    }

    .rating label {
        cursor: pointer;
        font-size: 1.5em;
        color: #ddd;
        padding: 0 0.1em;
    }

    .rating input:checked ~ label,
    .rating label:hover,
    .rating label:hover ~ label {
        color: #ffd700;
    }
</style>
