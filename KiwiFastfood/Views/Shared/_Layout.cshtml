<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kiwi Fastfood</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Reset default styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            line-height: 1.6;
            background-color: #f8f9fa;
        }

        /* Enhanced Navbar */
        .navbar {
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            transition: color 0.3s;
        }

        .navbar-brand:hover {
            color: #28a745 !important;
        }

        .nav-link {
            padding: 0.5rem 1rem !important;
            transition: all 0.3s;
        }

        .nav-link:hover {
            color: #28a745 !important;
            transform: translateY(-2px);
        }

        /* Main Content */
        .body-content {
            padding: 2rem 0;
            min-height: calc(100vh - 200px);
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 1rem 0;
            color: #666;
            border-top: 1px solid #eee;
            margin-top: 2rem;
        }

        /* Floating Chat Button */
        .floating-chat-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #28a745, #218838);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
            cursor: pointer;
            z-index: 1000;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .floating-chat-btn:hover {
            transform: scale(1.1) rotate(5deg);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
        }

        .floating-chat-btn i {
            font-size: 24px;
        }

    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Kiwi Fastfood", "Home", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarContent"
                    aria-controls="navbarContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Món ăn", "Product", "Product", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (Session["UserToken"] != null)
                    {
                        if (Session["Admin"] != null)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Trang admin", "User", "Admin", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                        <li class="nav-item">
                            @Html.ActionLink("Thông tin cá nhân", "Profile", "User", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Chi tiết đơn hàng", "Order", "Order", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Giỏ hàng", "Cart", "Cart", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng xuất", "Logout", "User", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Đăng nhập", "Login", "User", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng ký", "Register", "User", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>© @DateTime.Now.Year - Kiwi Fastfood</p>
        </div>
    </footer>

    <!-- Floating Chat Button -->
    <a href="@Url.Action("Chat", "Chatbot")" class="floating-chat-btn" title="Chat với Kiwi Bot">
        <i class="fas fa-comment-dots"></i>
    </a>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>