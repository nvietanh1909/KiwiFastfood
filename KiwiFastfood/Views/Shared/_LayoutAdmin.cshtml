<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <style>
        body {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            height: 100vh;
            padding: 15px;
            position: fixed;
        }

            .sidebar a {
                color: white;
                display: block;
                padding: 10px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            margin-left: 250px;
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4>Admin Panel</h4>
        <a href="#"><i class="fas fa-box"></i> Tổng quan</a>
        <a href="@Url.Action("User", "Admin")"><i class="fas fa-users"></i> Quản lý người dùng</a>
        <a href="#"><i class="fas fa-shopping-cart"></i> Quản lý đơn hàng</a>
        <a href="#"><i class="fas fa-box"></i> Quản lý sản phẩm</a>
        <a href="@Url.Action("Category", "Category")"><i class="fas fa-box"></i> Quản lý danh mục</a>
        <a href="#"><i class="fas fa-cog"></i> Cài đặt</a>
        <a href="@Url.Action("Home", "Home")"><i class="fas fa-cog"></i> Trang bán hàng</a>
        <hr />
        <a href="#" class="text-danger"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
    </div>

    <!-- Content -->
    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <span class="navbar-brand">Trang quản trị</span>
                <div class="ms-auto">
                    <span>Xin chào, @Session["UserRole"]</span>
                </div>
            </div>
        </nav>

        <div class="container mt-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
