@{
    ViewBag.Title = "Chỉnh sửa thông tin cá nhân";
}

<h2>Chỉnh sửa thông tin cá nhân</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form method="post" action="@Url.Action("EditProfile", "User")">
    <div class="form-group">
        <label for="hoTen">Họ và Tên:</label>
        <input type="text" class="form-control" id="hoTen" name="hoTen" value="@ViewBag.UserProfile?.hoTen" required />
    </div>

    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email" value="@ViewBag.UserProfile?.email" required />
    </div>

    <div class="form-group">
        <label for="diaChi">Địa chỉ:</label>
        <input type="text" class="form-control" id="diaChi" name="diaChi" value="@ViewBag.UserProfile?.diaChi" required />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="@Url.Action("Profile", "User")" class="btn btn-secondary">Hủy</a>
</form>
