@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p style="color: red;">@ViewBag.ErrorMessage</p>
}

<form method="post" action="@Url.Action("Login", "User")">
    <div>
        <label for="taiKhoan">Tài khoản:</label>
        <input type="text" name="taiKhoan" id="taiKhoan" required />
    </div>

    <div>
        <label for="matKhau">Mật khẩu:</label>
        <input type="password" name="matKhau" id="matKhau" required />
    </div>

    <button type="submit">Đăng nhập</button>
</form>

<p>Chưa có tài khoản? <a href="@Url.Action("Register", "User")">Đăng ký</a></p>
